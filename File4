import java.util.Scanner;

public class Roots {
    public static void main(String[] args) {
        Scanner in=new Scanner(System.in);
        int n=in.nextInt();
        int p=in.nextInt();
        int x=in.nextInt();
        System.out.println("Total : "+(n+p+x));
        System.out.printf("Average : %.2f",(float)(n+p+x)/3);
    }
}
